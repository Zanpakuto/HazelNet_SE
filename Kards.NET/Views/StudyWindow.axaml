<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Kards.NET.ViewModels"
        mc:Ignorable="d" Width="800" Height="450"
        x:DataType="vm:StudyWindowViewModel"
        x:Class="Kards.NET.Views.StudyWindow"
        WindowStartupLocation="CenterScreen"
        SystemDecorations="Full"
        WindowState="Normal"
        Title="Study Window">

        <Border Background="#ffffff"
                Height="400"
                Width="750"
                BorderBrush="#475569"
                CornerRadius="10"
                Padding = "10"
                Margin = "10">
                
                <Grid RowDefinitions="Auto, *,Auto, Auto">
                        <TextBlock Grid.Row="0"
                                   Text="{Binding Deck.DeckName}"
                                   FontWeight="SemiBold"
                                   FontSize="20"
                                   Foreground="#94a3b8"
                                   FontFamily="Roboto"
                                   Margin="0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"/>
                         
                        <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto" 
                              Margin="5,10">
                                <Button Grid.Column="0" Background="White" FontSize="30" Click="Previous">&lt;</Button>
                                
                                <Carousel Grid.Column="1" 
                                          Name="Cards"
                                          MinHeight="150"
                                          ItemsSource="{Binding Kards}"
                                          SelectedIndex="{Binding CurrentCardIndex}">
                                        <Carousel.ItemTemplate>
                                                <DataTemplate>
                                                        <TextBlock  Text ="{Binding DisplayText}"  
                                                                    FontWeight="Bold"
                                                                    FontSize="60"
                                                                    FontFamily = "Roboto"
                                                                    Foreground="#1e293b"
                                                                    Margin="5,20"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </DataTemplate>
                                        </Carousel.ItemTemplate>
                                </Carousel>
                            
                                <Button Grid.Column="2" Background="White" FontSize="30" Click="Next" 
                                        HorizontalAlignment="Right">&gt;</Button>
                        </Grid>
                        
                        <Button Grid.Row="2"
                                Content="{Binding CurrentCard.FlipButtonText }"
                                Command="{Binding FlipCardCommand}"
                                Margin="5,20"
                                Background="#1e40af"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="#f1f5f9"
                                CornerRadius="5"
                                Height="50"
                                Width="120"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"/>
                        
                        
                        <ProgressBar Grid.Row="3"
                                     Height="15"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Bottom"
                                     Foreground="#059669"
                                     Minimum="0"
                                     Maximum="{Binding Kards.Count}"
                                     Value="{Binding CurrentCardIndex}"/>  
                </Grid>
                
                
        </Border>
</Window>



